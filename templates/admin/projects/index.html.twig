{% extends 'base.html.twig' %}

{% block title %}Gérer les Projets{% endblock %}

{% block body %}
    <h1> Gérer les Projets</h1>
    <a href="{{ path("admin_projects_ajout") }}" class="btn shadow-1 rounded-1 blue">Ajouter un Projet</a>
    <div class="responsive-table">
  <table class="table striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Parent</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    {% for project in projects %}
      <tr>
        <td>{{project.id}}</td>
        <td>{{project.name}}</td>
        <td>{{project.parent}}</td>
        <td class="text-center">
        <a href="{{ path("admin_categories_modifier", {id: project.id}) }}" class="btn shadow-1 rounded-1 blue">Modifier</a>
        </td>
      </tr>
      {% endfor %}
      </tbody>
  </table>
</div>
{{dump(projects)}}
{% endblock %}
